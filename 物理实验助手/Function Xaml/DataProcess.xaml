    <Grid Background="Beige">

        <CommandBar Background="#FF55C1B1" Foreground="White">
            <CommandBar.Content>
                <TextBlock x:Name="resource" Text="数据处理" FontSize="20" Margin="58,10,0,0"/>
            </CommandBar.Content>
            <AppBarButton Click="place_on_file"  Icon="Copy" Label="数据归档" Foreground="White"/>
