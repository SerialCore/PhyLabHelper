                                <TextBox x:Name="A10" Grid.Row="2" Grid.Column="1" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A11" Grid.Row="2" Grid.Column="2" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A12" Grid.Row="2" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A13" Grid.Row="3" Grid.Column="0" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A14" Grid.Row="3" Grid.Column="1" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A15" Grid.Row="3" Grid.Column="2" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A16" Grid.Row="3" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                            </Grid>
                            <Grid Grid.Row="1" Margin="5,5,10,0" BorderBrush="White" BorderThickness="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="B1" Grid.Row="0" Grid.Column="0" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B2" Grid.Row="0" Grid.Column="1" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B3" Grid.Row="0" Grid.Column="2" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B4" Grid.Row="0" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B5" Grid.Row="1" Grid.Column="0" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B6" Grid.Row="1" Grid.Column="1" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B7" Grid.Row="1" Grid.Column="2" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B8" Grid.Row="1" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B9" Grid.Row="2" Grid.Column="0" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B10" Grid.Row="2" Grid.Column="1" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B11" Grid.Row="2" Grid.Column="2" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B12" Grid.Row="2" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="B13" Grid.Row="3" Grid.Column="0" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
