                                <TextBox x:Name="A4" Grid.Row="0" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A5" Grid.Row="1" Grid.Column="0" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A6" Grid.Row="1" Grid.Column="1" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A7" Grid.Row="1" Grid.Column="2" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
                                <TextBox x:Name="A8" Grid.Row="1" Grid.Column="3" InputScope="Number" AcceptsReturn="True" VerticalAlignment="Stretch"/>
